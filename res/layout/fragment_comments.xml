<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
	        android:id="@+id/comment_CountText" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="start"
	        android:textSize="19sp"
	        android:padding="10dp" />
	    
	    <LinearLayout
	        android:id="@+id/comment_Commentsframe"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" />
	    
	    <TextView 
	        android:id="@+id/comment_LeaveReplyText" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="start"
	        android:textSize="19sp"
	        android:padding="10dp" />
	    
	    <LinearLayout 
	        android:id="@+id/newComment_form"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_curved_corners"
	        android:orientation="vertical"
	        android:padding="10dp" >
	        
	        <EditText 
	            android:id="@+id/newComment_comment"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:minLines="5"
	            android:gravity="start"
	            android:hint="@string/comment"
	            android:inputType="textMultiLine"
	            android:padding="5dp" />
	        
	        <Button
	            android:id="@+id/newComment_submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" />
	        
	    </LinearLayout>

</LinearLayout>
