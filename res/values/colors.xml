<resources>

    <!-- regular background color and text color -->
    <color name="regular_background">@color/white</color>
    <color name="regular_foreground_on">@color/black</color>
    <color name="regular_foreground_off">@color/lightgrey</color>
    <color name="regular_foreground_secondary_on">@color/darkgrey</color>
    <color name="regular_foreground_secondary_off">@color/lightgrey</color>
    
    <!-- primary colors used by the action bar -->
    <color name="actionbar_background">@color/white</color>
    <color name="actionbar_foreground">@color/black</color>
    <color name="actionbar_foreground_secondary">@color/grey</color>
    <color name="actionbar_dark">@color/darkgrey</color>
    
    <!-- color used for some accents, like enabled checkboxes -->
    <color name="color_accent">@color/blue</color>
    
    <!-- color used for selected items in a list -->
    <color name="selected_background">@color/blue</color>
    <color name="selected_foreground">@color/white</color>
    
    <!-- color for divider line -->
    <color name="divider_line">@color/lightgrey</color>
    
    
