<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- regular background color and text (foreground) color, 
    	 for disabled text foreground_off is used 
    	 foreground_secondary are e.g. summary lines below the title in the settings menu -->
    <color name="regular_background">@color/white</color>
    <color name="regular_foreground_a">@color/black</color>
    <color name="regular_foreground_hint">@color/grey</color>
    <color name="regular_foreground_secondary_a">@color/grey_d</color>
    <color name="regular_foreground_secondary_hint">@color/grey_l</color>
    
    <!-- primary colors used by the action bar
     	 foreground is text and icon color
     	 secondary is used for e.g. hint in the searchview -->
    <color name="actionbar_background">@color/grey_l</color>
    <color name="actionbar_foreground">@color/black</color>
    <color name="actionbar_foreground_hint">@color/grey</color>
    <color name="actionbar_dark">@color/grey_d</color>
    <color name="actionbar_dark_foreground">@color/white</color>
    
    <!-- color used for some accents, like enabled checkboxes -->
    <color name="color_accent">@color/blue</color>
    
    <!-- color used for selected items in a list, for instance in the drawer -->
    <color name="selected_background">@color/blue</color>
    <color name="selected_foreground">@color/white</color>
    
    <!-- color for divider line -->
    <color name="divider_line">@color/grey_l</color>
    
    
    <!-- some colors to pick from ;) -->
    <color name="white">#FFFFFF</color>
    
    <color name="pitchblack">#000000</color>
    <color name="black">#212121</color>
    <color name="transparent">#00000000</color>
    
    <color name="grey_l">#e0e0e0</color>
    <color name="grey">#bdbdbd</color>
    <color name="grey_d">#757575</color>
    
    <color name="red_l">#FFCDD2</color>
    <color name="red">#F44336</color>
    <color name="red_d">#D32F2F</color>
    <color name="blue_l">#BBDEFB</color>
    <color name="blue">#2196F3</color>
    <color name="blue_d">#1976D2</color>
    <color name="purple_l">#E1BEE7</color>
    <color name="purple">#9C27B0</color>
    <color name="purple_d">#7B1FA2</color>
    <color name="green_l">#C8E6C9</color>
    <color name="green">#4CAF50</color>
    <color name="green_d">#388E3C</color>
    <color name="yellow">#FFEB3B</color>
    <color name="orange">#FF9800</color>

</resources>